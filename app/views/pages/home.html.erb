<div>
  <div class="row">
    <div class="col-6">
      <h4>Mes Companies:
        <% current_user.companies.merge(Participation.administrators).each do |company| %>
          <p><%= company.nom %></p>
        <% end %>
      <h4>Mes Pousses:</h4>
        <% current_user.participations.where(admin: true).each do |participation| %>
          <p><%= participation.pouss.nom %></p>
        <% end %>

      <h1>Pages#home</h1>

      <p>Currrent user: latitude <%= current_user.latitude %>, longitude <%= current_user.longitude %> - <%= current_user.first_name %> - <%= current_user.town %> <%= current_user.present? %></p>

      <%= link_to "Créer votre entreprise", new_company_path %>

      <p>Bla bla bla</p>

      <p>companies around: <%= @companies_around.first.nom %></p>


    </div>

    <div class="col-6">
      <div id="map" style="width:100%; height: 80%;" data-company_around_markers="<%= @companies_around_markers.to_json %>" data-personnal_town_marker="<%= @personnal_town_marker.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>

</div>

