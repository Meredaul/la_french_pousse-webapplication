<h2>Sign Up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, label: "Prénom :", required: true, autofocus: true, placeholder: "Tyrion" %>

    <%= f.input :last_name, label: "Nom de Famille :", required: true, autofocus: true, placeholder: "Lannister" %>

    <%= f.input :town, label: "Ville/Village :", required: true, autofocus: true, placeholder: "King's Landing", input_html: {id: :personnal_registration_town} %>

    <%= f.input :email, label: "Adresse électronique principale :", required: true, autofocus: true, placeholder: "tyrion.lannister@lafrenchpousse.fr", input_html: { autocomplete: "email" }%>

    <%= f.input :password, label: "Mot de Passe :", required: true, autofocus: true, placeholder: "••••••", hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" } %>

    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Rejoindre La French Pousse" %>
  </div>
<% end %>




