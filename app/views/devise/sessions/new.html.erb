<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: :new_login}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { id: :login_email, autocomplete: "email"} %>
                <!--   -->
    <%= f.input :password,
                required: false,
                input_html: { id: :login_password, autocomplete: "current-password" } %>
                <!-- autocomplete: "new-password" -->
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>


