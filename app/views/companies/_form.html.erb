  <div class="form-inputs">

    <%= f.input :nom, label: "Nom :", required: true, autofocus: true, placeholder: "Tyrion" %>

    <%= f.input :presentation, label: "Presentation :", required: true, autofocus: true, placeholder: "Lannister" %>

    <%= f.input :adresse, label: "Adresse :", required: true, autofocus: true, placeholder: "King's Landing", input_html: {id: :adresse} %>

    <%= f.input :email, label: "Adresse Ã©lectronique principale :", required: true, autofocus: true, placeholder: "tyrion.lannister@lafrenchpousse.fr", input_html: { autocomplete: "email" }%>

    <%= f.input :photo %>
