<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <%= f.input :nom, label: false, required: true, autofocus: true, placeholder: "Nom De Votre Pousse" %>

    <%= f.input :presentation, label: false, required: true, autofocus: true, placeholder: "Présentation" %>

    <%= f.input :address, label: false, required: true, autofocus: true, placeholder: "Adresse De Votre Pousse", input_html: {id: :adresse} %>

    <%= f.input :email, label: false, required: true, autofocus: true, placeholder: "Adresse Électronique Principale :", input_html: { autocomplete: "nope" }%>

    <%= f.input :category_id, required: true, prompt: "Sélectionner Votre Catégorie Principale", collection: @categories, label_method: :first, value_method: :second, label: false %>

    <%= f.input :photo, required: true %>
    <%= f.input :photo_cache, as: :hidden %>

  </div>

  <div class="form-actions bouton-acces-lfp" style="display: flex; justify-content: space-around;">
    <%= f.button :submit %>
  </div>
<% end %>

